<%- include ../layout/header.ejs -%>
<div class="main">
    <div class="container">
      <div class="content add-post">
        <h2>Добавить пост</h2>
        <form method="post">
            <div class="form-group">
              <label for="post-title">Заголовок</label>
              <input type="text" id="post-title" name="title" />
            </div>
            <div class="form-group">
              <label for="post-body">Текст</label>
              <textarea name="body" id="post-body" ></textarea>
            </div>
            <div class="buttons">
                <button class="save-button secondary-inverse"> Сохранить в личные записи</button>
                <button class="publish-button">Опубликовать запис</button>
            </div>
            
          </form>
      </div>
      <%- include ../layout/sidebar.ejs -%>
    </div>
  </div>

<%- include ../layout/footer.ejs -%>